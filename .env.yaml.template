# Portfolio Agent Environment Variables Template
# Copy this file to .env.yaml and fill in your actual values
# NEVER commit .env.yaml with real credentials to Git

# Gmail Configuration (REQUIRED)
GMAIL_USER: "your-email@gmail.com"
GMAIL_PASSWORD: "your-16-char-app-password"

# AI Analysis Configuration (REQUIRED)
CLAUDE_API_KEY: "sk-ant-api03-your-actual-key-here"

# Optional: Email Recipient (defaults to GMAIL_USER if not set)
# ALERT_RECIPIENT: "recipient@email.com"

# Data Collection Feature Flags
ENABLE_MW_SCRAPE: "true"            # Enable MarketWatch scraping
ENABLE_YF_WEB_SCRAPE: "true"        # Enable Yahoo web scraping
ENABLE_DATA_CACHE: "false"          # Enable data caching layer
CACHE_DURATION_MINUTES: "30"        # Cache expiration time

# Production deployment notes:
# 1. For GCP deployment, use Google Cloud Secret Manager instead
# 2. Set environment variables in Cloud Function configuration
# 3. Never include this file in deployment packages